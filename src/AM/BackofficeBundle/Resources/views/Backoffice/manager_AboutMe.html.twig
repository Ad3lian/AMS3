{% extends "AMBackofficeBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - AboutMe {% endblock %}


{#   MENU    #}
{% block body %}

    {{ include("AMBackofficeBundle:Backoffice:menu2.html.twig") }}

{#  CONTENT  #}
<div class="container-fluid">
    <div class="row" style="margin-top: 80px;">
        <div class="col-12 col-md-3 col-lg-2 col-xl-3 bd-sidebar">
            {{ include("AMBackofficeBundle:Backoffice:navBar.html.twig") }}
        </div>
        <div class="col-12 col-md-9 col-lg-9 col-xl-9 bd-content" role="main">
            <div class="container-fluid">
                <div class="row" style="margin-top: 80px;">
                    <div class="col-1 col-md-1 col-lg-1 col-xl-1 bd-sidebar">
                    </div>
                    <div class="col-10 col-md-10 col-lg-10 col-xl-10 bd-content" role="main">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <strong>Pr√©sentation AboutMe :</strong>
                            </div>
                            <div class="panel-body">

                                {% for myabout in myabouts %}

                                    <div class="row">
                                        <div class="col-9 col-md-9 col-lg-9 col-xl-9">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                {{ myabout.title }}
                                                </div>
                                                <div class="panel-body">
                                                    <div>
                                                        {{ myabout.content|raw }}
                                                    </div><br>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3 col-md-3 col-lg-3 col-xl-3">
                                            <form>
                                                <input type="hidden" value="{{ myabout.id }}">
                                            </form>
                                            <button class="btn btn-primary modifier_page" type="button"
                                                    data-toggle="collapse" data-target="#modifier_myabout{{ myabout.id }}"
                                                    aria-expanded="false" value="{{ myabout.id }}">Modifier
                                            </button><br><br>
                                        </div>
                                    </div>

                                    <div class="collapse" id="modifier_myabout{{ myabout.id }}"
                                         aria-expanded="true" style="">
                                        <div class="row">
                                            <div class="col-9 col-md-9 col-lg-9 col-xl-9">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                    </div>
                                                    <div class="panel-body">
                                                        <form action="{{ path('am_backoffice_changemyabout', { 'id': myabout.id }) }}" method="POST">
                                                            <div class="form-group ">
                                                                <label for="nom">Titre * : </label>
                                                                <input type="text" id="titre" name="titre" required
                                                                       maxlength="35" placeholder="Titre"
                                                                       value="{{ myabout.title }}"
                                                                       class="form-control">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="message">Message * : </label>
                                                                <textarea id="editor" name="message" required placeholder="Message"
                                                                          class="form-control" rows="15">{{ myabout.content|raw }}
                                                                </textarea>
                                                            </div>
                                                            <button id="modifier_momPost" class="btn btn-danger" type="submit"
                                                                    value="{{ myabout.id }}">Confirmer
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3 col-md-3 col-lg-3 col-xl-3">
                                            </div>
                                        </div>
                                    </div>

                                {% endfor %}

                            </div>
                        </div>
                    </div>
                    <div class="col-1 col-md-1 col-lg-1 col-xl-1 bd-content" role="main">
                    </div>
                </div>

            </div>
        </div>
    </div>
    {#<div class="col-12 col-md-2 col-lg-2 col-xl-1 bd-content" role="main">#}
    {#</div>#}
</div>

{% endblock %}