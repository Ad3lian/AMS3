{% extends "AMSiteBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Blog{% endblock %}


{#   MENU    #}
{% block body %}
{{ include("AMSiteBundle:Site:menu.html.twig") }}

{#  CONTENT  #}
<div class="row">
    <div class="col-12 col-md-2 col-lg-2 col-xl-3 bd-sidebar"></div>
    <div class="col-12 col-md-8 col-lg-8 col-xl-6 bd-content" role="main">

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-2 col-lg-2 col-xl-3 bd-sidebar"></div>
        <div class="col-12 col-md-8 col-lg-8 col-xl-6 bd-content" role="main">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {{ post.title }}
                    </div>
                    <div class="panel-body">
                        {{ post.content }}
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Commentaires :
                    </div>
                    <div class="panel-body">
                        {% for comment in listComments %}

                            <div class="postContent"><strong>{{ comment.author }} : </strong>{{ comment.comment|raw }}</div>

                        {% endfor %}
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Ajouter un commentaire :
                    </div>
                    <div class="panel-body">
                        <form action="{{ path('am_site_comment', { 'id': post.id }) }}" method="post">
                            <div class="form-group">
                                <label for="author">Auteur * : </label>
                                <input type="text" id="author" name="author" required maxlength="15" placeholder="Auteur" class="form-control">
                            </div>
                            <div id="error_author" class="alert alert-danger" style="display: none;">
                                Veuillez saisir un pr√©nom.
                            </div>
                            <div class="form-group">
                                <label for="comment">Commentaire * : </label>
                                <input type="text" id="comment" name="comment" required maxlength="100" placeholder="Commentaire" class="form-control">
                            </div>
                            <div id="error_comment" class="alert alert-danger" style="display: none;">
                                Veuillez saisir un commentaire.
                            </div>
                            <div>
                                <button type="submit" id="btn_commentaire" class="btn btn-primary" name="btn_commentaire"
                                value="{{ post.id }}">Ajouter
                                </button>
                                * Champs obligatoires
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-2 col-lg-2 col-xl-3 bd-toc"></div>
    </div>
</div>
    </div>
    <div class="col-12 col-md-2 col-lg-2 col-xl-3 bd-toc"></div>
</div>
{% endblock %}