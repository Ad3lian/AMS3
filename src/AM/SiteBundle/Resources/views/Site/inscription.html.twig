{% extends "AMSiteBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Inscription {% endblock %}


{#   MENU    #}
{% block body %}

    {{ include("AMSiteBundle:Site:menu.html.twig") }}

{#  CONTENT  #}
    <div class="modal-content" style="margin-left:30%;width: 40%;">
        <div class="modal-header">
            <h4 class="modal-title">INSCRIPTION</h4>
        </div>
        <div class="modal-body" style="height: 430px;">
            {{ form_start(form, {'attr': {'class': 'form-group'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            {# Génération manuelle et éclatée : #}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.name, "Nom *:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.name) }}
                <div class="col-sm-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}<br>
                </div>
            </div>

            {# Idem pour un autre champ. #}
            <div class="form-group">
                {{ form_label(form.firstname, "Prénom *:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.firstname) }}
                <div class="col-sm-12">
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}<br>
                </div>
            </div>

            {# Idem pour un autre champ. #}
            <div class="form-group">
                {{ form_label(form.email, "Email *:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.email) }}
                <div class="col-sm-12">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}<br>
                </div>
            </div>

            {# Idem pour un autre champ. #}
            <div class="form-group">
                {{ form_label(form.password, "Mot de passe *:", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                {{ form_errors(form.password) }}
                <div class="col-sm-12">
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}<br>
                    * : Tous les champs sont obligatoires.
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-1">
                    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                    {{ form_widget(form.Inscription, {'attr': {'class': 'btn btn-primary', 'style': 'margin-top:10px;'}}) }}
                </div>
            </div>

            {# Génération automatique des champs pas encore écrits.
               Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
               et tous les champs cachés (type « hidden »). #}
            {{ form_rest(form) }}

            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(form) }}

        </div>
        <div class="modal-footer"></div>

    </div>


{% endblock %}